<UserControl x:Class="SquireLauncher.Gui.Views.ProfileTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="userControl"
>
    <Grid Loaded="Grid_Loaded">
        <DataGrid x:Name="ProfileGrid" AutoGenerateColumns="False" ItemsSource="{Binding ElementName=userControl, Path=Profiles}" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Path" Binding="{Binding Path}"/>
                <!-- Dropdown column -->
                <DataGridTemplateColumn Header="Farm">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Grid.Row="0" Margin="10" Width="200" 
                                      ItemsSource="{Binding ElementName=userControl, Path=AvaillableFarms}" 
                                      SelectedItem="{Binding ElementName=userControl, Path=selectedFarm}" DisplayMemberPath="Name"/>                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- End of dropdown column -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
